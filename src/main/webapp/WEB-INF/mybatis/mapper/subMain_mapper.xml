<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="subMain_mapper">

	<!-- 전체 업소 조회 리스트 -->
	<select id="findStoreList" resultType="Store">
		SELECT * FROM STORE
	</select>

	<select id="findStoreDetailList" resultType="StoreDetail">
		SELECT * FROM
		STORE_DETAIL
	</select>

	<select id="findMenuList" resultType="Menu">
		SELECT * FROM MENU
	</select>



	<select id="findStoreWithFilters" resultType="Store" parameterType="hashmap">
		SELECT * FROM STORE
		<where>
			<if test="spoon != null">
				AND spoon = #{spoon}
			</if>
		</where>
	</select>
	
	<select id="findStoreDetailWithFilters" resultType="StoreDetail" parameterType="hashmap">
		SELECT * FROM STORE_DETAIL sd
		<where>
			<if test="spoon != null">
				AND sd.store_id IN (
					SELECT s.id FROM STORE s WHERE s.spoon = #{spoon}
				) 
			</if>
		</where>
	</select>
	
	<select id="findMenuWithFilters" resultType="Menu" parameterType="hashmap">
		SELECT * FROM MENU m
		<where>
			<if test="spoon != null">
				AND m.store_id IN (
					SELECT s.id FROM STORE s WHERE s.spoon = #{spoon}
				)
			</if>
		</where>
	</select>
	
	<select id="findSpoonNum" resultType="StoreFilter">
		SELECT spoon, COUNT(*) AS count
		FROM STORE
		GROUP BY spoon
		ORDER BY spoon
	</select>

</mapper>